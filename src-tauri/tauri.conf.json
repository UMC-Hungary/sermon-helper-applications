{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sermon-helper-tauri",
  "version": "0.1.0",
  "identifier": "com.sermon-helper-tauri.app",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "sermon-helper-tauri",
        "width": 800,
        "height": 600,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "-",
      "minimumSystemVersion": "10.13"
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["sermon-helper"]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM4ODE5NzU4NDQ4RDBFN0YKUldSL0RvMUVXSmVCeUVCOFU4YTFMblJRUGtEYmR5VktLUytsUlp4WGZzcVJqY2pLZWZrdWYvOEcK",
      "endpoints": [
        "https://github.com/UMC-Hungary/sermon-helper-applications/releases/latest/download/latest.json"
      ]
    }
  }
}
